{
  "compilerOptions": {
    "experimentalDecorators": true,   
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "paths": {
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@main/*": ["main/*"],
      "@presentation/*": ["presentation/*"],
      "@utils/*": ["utils/*"],
    },
  }
}
