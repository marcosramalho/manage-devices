{
  "compilerOptions": {    
    "target": "ES2019",
    "module": "commonjs",
    "experimentalDecorators": true,   
    "outDir": "./dist",        
    "baseUrl": ".",       
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["*"]      
    }
  },   
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "coverage",
    ".vscode"
  ]
}
